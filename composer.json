{
  "name": "edmondscommerce/phpqa",
  "license": "MIT",
  "type": "project",
  "description": "Simple PHP QA pipeline and scripts. Largely just a collection of dependencies with configuration and scripts to run them together",
  "autoload": {
    "psr-4": {
      "EdmondsCommerce\\PHPQA\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EdmondsCommerce\\PHPQA\\Tests\\": [
        "tests/"
      ]
    }
  },
  "require": {
    "php": "~7.1",
    "phpunit/phpunit": "^7.3",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "jakub-onderka/php-parallel-lint": "dev-SplitAutoload@dev",
    "phploc/phploc": "^4.0",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan-shim": "^0.9.2",
    "squizlabs/php_codesniffer": "~3",
    "sllh/composer-versions-check": "^2.0",
    "phpstan/phpstan-strict-rules": "^0.9.0",
    "infection/infection": "^0.8",
    "funkyproject/reflection-file": "^0.1.0",
    "phpunit/php-invoker": "^2.0",
    "ext-json": "*",
    "phpunit/php-timer": "^2.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/edmondscommerce/PHP-Parallel-Lint"
    }
  ],
  "require-dev": {
    "phpstan/phpstan-phpunit": "~0"
  },
  "suggest": {
    "phpstan/phpstan-phpunit": "Adds checks for PHPUnit tests"
  },
  "bin": [
    "bin/qa",
    "bin/mdlinks",
    "bin/psr4-validate",
    "bin/phpunit-check-annotation"
  ],
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    },
    "optimize-autoloader": true
  },
  "minimum-stability": "stable"
}
